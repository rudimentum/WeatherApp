<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:fontFamily="@font/galdeano"
        android:text="@string/logo"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/userField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@id/logo"
        android:backgroundTint="@color/purple_200"
        android:layout_marginTop="100sp"
        android:layout_marginHorizontal="50sp"
        android:inputType="textPersonName"
        android:hint="@string/hint_user_field"
        android:fontFamily="@font/galdeano"
        android:textColor="@color/black"
        android:textColorHint="@color/grey" />

    <Button
        android:id="@+id/mainBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userField"
        android:layout_marginTop="20sp"
        android:layout_marginHorizontal="125sp"
        android:backgroundTint="@color/purple_200"
        android:fontFamily="@font/galdeano"
        android:text="@string/main_btn"
        />

    <TextView
        android:id="@+id/resultInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainBtn"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/galdeano"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp" />
</RelativeLayout>
